<div class="container">
   <div class="row">
    <% @articles.each do |article| %>
      <%= link_to article do %>
        <div class="col-md-3 margin-top-5per article-block padding-top15">
        <% if article.image_id.present? %>
          <%= image_tag attachment_url(article, :image), class: 'img-responsive padding-top15', style: 'max-height: 150px; width: 100%; object-fit: cover' %>
        <% else %>
          <%= image_tag 'dtm.jpeg', class: 'img-responsive padding-top15', style: 'max-height: 150px; width: 100%; object-fit: cover' %>
        <% end %>
        
        <div class="padding-bottom-15">
          <p class="title"><%= article.title %></p>
          <span>
            <%= article.created_at.strftime("%Y年%m月%d日") %>
          </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <%= link_to "新規作成", new_article_path, class: 'margin-top-5per btn btn-primary'%>
  </div>
</div>